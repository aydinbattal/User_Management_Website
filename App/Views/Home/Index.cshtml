@model App.Models.User;

<h2>Signup</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" asp-validation-summary="All"></div>
}

<form asp-action="SignUp" method="POST">
    <div class="form-group">
        <label asp-for="FullName">First and Last Name</label>
        <input asp-for="FullName" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control">
        @if (ViewBag.EmailExists == "")
        {
            <span class="field-validation-error text-danger" data-valmsg-for="Email" data-valmsg-replace="true">A user with
                this email address already exists! Do you want to <a href="Login">login?</a></span>
        }


    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirmation">Confirm Password</label>
        <input asp-for="PasswordConfirmation" type="text" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
